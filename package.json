{
  "name": "stylelint-config-custom",
  "version": "1.0.0",
  "description": "Базовый набор для конфигурации Stylelint",
  "engines": {
    "node": ">=14.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "stylelint",
    "stylelint-config",
    "scss",
    "typescript"
  ],
  "license": "MIT",
  "peerDependencies": {
    "stylelint": ">=16.0.0"
  },
  "dependencies": {
    "stylelint-config-idiomatic-order": "10.0.0",
    "stylelint-config-standard": "38.0.0",
    "stylelint-high-performance-animation": "1.11.0",
    "stylelint-scss": "6.12.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.18",
    "@types/stylelint": "14.0.0",
    "@typescript-eslint/eslint-plugin": "8.32.1",
    "@typescript-eslint/parser": "8.32.1",
    "eslint": "8.57.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-n": "15.7.0",
    "eslint-plugin-only-warn": "1.1.0",
    "eslint-plugin-promise": "6.6.0",
    "eslint-plugin-sonarjs": "3.0.2",
    "globals": "16.1.0",
    "jest": "29.7.0",
    "jest-light-runner": "^0.7.8",
    "jest-preset-stylelint": "7.3.0",
    "postcss": "8.5.3",
    "ts-jest": "29.3.4",
    "typescript": "5.8.3"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:src": "tsc -p tsconfig.inplace.json",
    "lint": "npx eslint --fix .",
    "test": "jest",
    "lint:style": "stylelint \"src/**/*.{scss,css}\""
  }
}
